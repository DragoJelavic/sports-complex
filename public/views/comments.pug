html
  head
    title Comments for #{comments.className}
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 20px;
      }
      .comments-container {
        max-width: 600px;
        margin: 0 auto;
      }
      .comment-box {
        background-color: #ffffff;
        border: 1px solid #cccccc;
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 15px;
      }
      .comment-text {
        text-align: center;
        margin-bottom: 10px;
      }
      .rating {
        text-align: right;
        font-style: italic;
        color: #888888;
        font-size: 0.8em;
      }
      .no-comments {
        text-align: center;
        font-style: italic;
        color: #888888;
        margin-top: 20px;
      }

  body
    div.comments-container
      h1 Comments for #{comments.className}
      p Average Rating: #{comments.averageRating ? comments.averageRating.toFixed(2) : 'N/A'}
      p Age Group: #{comments.ageGroup}

      if comments.comments.length === 0
        p.no-comments No comments available.
      else
        each comment in comments.comments
          .comment-box
            p.comment-text #{comment.commentText}
            p.rating Rating: #{comment.rating} - #{comment.isAnonymous ? 'Anonymous' : comment.userEmail}
